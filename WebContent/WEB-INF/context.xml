<?xml version="1.0" encoding="UTF-8"?>

<context>
    <Resource
	    name = "jdbc/Surf-San-DiegoDBPool"
	    desctiption="Surf San Diego DB Pool"
	    driverClassName="org.gjt.mm.mysql.Driver"
	    type="javax.sql.DataSource" 
	    auth="Container"
	    url="jdbc:mysql://localhost:3306/SurfSanDiegoDB?autoReconnect=true"
	    username="root" 
	    password="pothead"
	    defaultAutoCommit="false"
	    maxActive="20" 
	    minIdle="0" 
	    maxIdle="5" 
	    maxWait="10000"
	    removeAbondoned="true" 
	    removeAbandonedTimeout="60"
	    logAbandoned="true" 
	    testOnBorrow="true"
		validationQuery="/* ping */ SELECT 1"    
   	/>
	<Realm className="org.apache.catalina.realm.DataSourceRealm"
		debug="99"
		dataSourceName="jdbc/Surf-San-DiegoDBPool"
		localDataSource="true"
		userTable="user_account"
		userNameCol="username"
		userCredCol="password"
		userRoleTable="user_role"
		roleNameCol="role"
	/>
</context>  