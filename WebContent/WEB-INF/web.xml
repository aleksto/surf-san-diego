  <security-constraint>
  	<web-resource-collection>
  		<web-resource-name>
  			User area
  		</web-resource-name>
  		<url-pattern>
  			/user/*
  		</url-pattern>
  	</web-resource-collection>
  	<auth-constraint>
  		<role-name>Member</role-name>
  	</auth-constraint>
  	<user-data-constraint>
  		<transport-guarantee>
  			CONFIDENTIAL
  		</transport-guarantee>
  	</user-data-constraint>
  </security-constraint>

 <security-constraint>
  	<web-resource-collection>
  		<web-resource-name>
  			admin area
  		</web-resource-name>
  		<url-pattern>
  			/admin/*
  		</url-pattern>
  	</web-resource-collection>
  	<auth-constraint>
  		<role-name>admin</role-name>
  	</auth-constraint>
  	<user-data-constraint>
  		<transport-guarantee>
  			CONFIDENTIAL
  		</transport-guarantee>
  	</user-data-constraint>
  </security-constraint>
</web-app>

